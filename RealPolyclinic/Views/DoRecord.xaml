<Window x:Class="RealPolyclinic.Views.DoRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealPolyclinic.Views"
        mc:Ignorable="d"
        Title="DoRecord" Height="250" Width="400">
    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Visibility="{Binding VisibleDel}">
                <Label Content="Name:"></Label>
                <Label Margin="-5 0 0 0" Content="{Binding NamePat}"></Label>
            </StackPanel>
            <Label Content="Id_patient"></Label>
            <TextBox Text="{Binding Id_Patient}"></TextBox>
            <Label Content="Doctor"></Label>
            <TextBox IsReadOnly="True" Text="{Binding record.Doc.FullName}"></TextBox>
            <Label Content="Date"></Label>
            <TextBox IsReadOnly="True" Text="{Binding showDate}"></TextBox>
            <Button Content="Record" Command="{Binding MakeAppoint}"></Button>
            <Button Visibility="{Binding VisibleDel}" Content="Del Record" Command="{Binding DelAppoint}"></Button>
        </StackPanel>
    </Grid>
</Window>
